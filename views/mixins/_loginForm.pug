mixin loginForm()
    div.panel.panel-default
        div.panel-body
            form.form-horizontal(action="/auth/login", method="post")
                h2 Login
                div.form-group
                    label.control-label.col-sm-3(for="email") Email
                    div.col-sm-9
                        input(type="email", autofocus=true, placeholder="Email", name="email").form-control
                div.form-group
                    label.control-label.col-sm-3(for="password") Password
                    div.col-sm-9
                        input(type="password", placeholder="Password", name="password").form-control
                div.form-group
                    div.col-sm-9.col-sm-offset-3
                        input.btn.btn-primary(type="submit", value="Log In")