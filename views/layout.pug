html
  head
    title= `${title} | ${h.siteName}`
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  body
    block navbar
      nav.navbar.navbar-default.fixed-top
        div.container-fluid
          div.navbar-header
            a.navbar-brand(href="/") #{h.siteName}
          div.collapse.navbar-collapse
            if user
              ul.nav.navbar-nav
                li.dropdown
                  a.dropdown-toggle(href="#", data-toggle="dropdown" role="button") Admin
                    span.caret
                  ul.dropdown-menu
                    li
                      a(href="/admin/roles") Roles
                      a(href="/admin/users") Users
                      a(href="#") Freeagent
            ul.nav.navbar-nav.navbar-right
              if user
                li
                  a(href="/auth/logout") Logout #{user.email}
              else
                li
                  a(href="/auth/google") Login (Google)
                li
                  a(href="/auth/azure") Login (Azure)
                li
                  a(href="/auth/login") Login

    block messages
      if locals.flashes
        - const categories = Object.keys(locals.flashes)
        each category in categories
          each message in flashes[category]
            div.container
              div(class=`alert-dismissable alert alert-${category}`) #{message}
                a(href="#", data-dismiss="alert").close &times;

    block content
      .container
        .row
          .col-sm-12
            h1 Welcome to the Optimum Management System
    block footer
        br
        .container
            div#update_message.text-center
            div &copy; 2018 Optimum PPS.

    block scripts
