extends ../layout

block content
    .container
        .row
            h1 System Modules
        .row
            button(data-toggle="modal", data-target="#addModule").btn.btn-primary Add Module
        .row
            table#table.table.table-striped.table-condensed
    div(role="dialog")#addModule.modal.fade
        div.modal-dialog
            div.modal-content
                div.modal-header
                    button(type="button", data-dismiss="modal").close &times;
                    h4.modal-title Add Module
                div.modal-body
                    form(action="/api/syssel/add_module", method="post").form-horizontal
                        div.form-group
                            label(for="module_name").control-label.col-sm-3 Module Name
                            div.col-sm-9
                                input(type="text", autofocus=true, placeholder="Module Name", name="module_name").form-control
                        div.form-group
                            label(for="module_description").control-label.col-sm-3 Description
                            div.col-sm-9
                                textarea(rows="5", name="module_description").form-control
                        div.form-group
                            div.col-sm-9.col-sm-offset-3
                                button(type="submit").btn.btn-primary Save
                div.modal-footer
                    button(type="button", data-dismiss="modal").btn.btn-default Close

