extends ../layout

block content
    .container-fluid
        .row
            .col-sm-11.col-sm-offset-1
                h1#pageTitle Vendors
        .row
            .col-sm-1.col-sm-offset-1
                button(data-toggle="modal", data-target="#addVendor").btn.btn-primary Add Vendor
            .col-sm-8
                input(id="systemFilter" placeholder="Enter a system to filter" onchange="applySystemFilter()").form-control
        .row
            .col-sm-10.col-sm-offset-1
                table#table.table.table-striped.table-condensed

    div(role="dialog")#addVendor.modal.fade
        div.modal-dialog.modal-lg
            div.modal-content
                div.modal-header
                    button(type="button", data-dismiss="modal").close &times;
                    h4.modal-title Add Vendor
                div.modal-body
                    form(action="/api/syssel/add_vendor", method="post").form-horizontal
                        div.form-group
                            label(for="vendor_name").control-label.col-sm-3 Vendor Name
                            div.col-sm-9
                                input(type="text", autofocus=true, placeholder="Vendor Name", name="vendor_name").form-control
                        div.form-group
                            label(for="vendor_url").control-label.col-sm-3 Website
                            div.col-sm-9
                                input(type="url", placeholder="Vendor URL", name="vendor_url").form-control
                        div.form-group
                            label(for="company_profile").control-label.col-sm-3 Description
                            div.col-sm-9
                                textarea(rows="5", name="company_profile").form-control
                        div.form-group
                            div.col-sm-9.col-sm-offset-3
                                button(type="submit").btn.btn-primary Save
                div.modal-footer
                    button(type="button", data-dismiss="modal").btn.btn-default Close

